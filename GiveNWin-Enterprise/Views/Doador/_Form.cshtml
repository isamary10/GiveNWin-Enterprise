@model Doador

<div class="mb-3">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Cpf"></label>
    <input asp-for="Cpf" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="DataNascimento"></label>
    <input asp-for="DataNascimento" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Genero"></label>
    <select asp-for="Genero" class="form-select"
            asp-items="@Html.GetEnumSelectList<Genero>()">
        <option>Selecione</option>
    </select>
</div>
<div class="mb-3">
    <label asp-for="Estado"></label>
    <select asp-for="Estado" class="form-select"
            asp-items="@Html.GetEnumSelectList<Estado>()">
        <option>Selecione</option>
    </select>
</div>
<div class="mb-3">
    <label asp-for="Pontuacao"></label>
    <input asp-for="Pontuacao" class="form-control" />
</div>

