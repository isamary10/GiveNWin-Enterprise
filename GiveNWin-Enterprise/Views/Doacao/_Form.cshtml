@model Doacao

<div class="form-group">
    <label asp-for="DataDoacao"></label>
    <input asp-for="DataDoacao" class="form-control" />
</div>

<div class="form-group">
    <label asp-for="ReceptorId"></label>
    <select asp-for="ReceptorId" class="form-select" asp-items="@ViewBag.Receptores">
        <option>Selecione</option>
    </select>
</div>

<div class="form-group">
    <label asp-for="DoadorId"></label>
    <select asp-for="DoadorId" class="form-select" asp-items="@ViewBag.Doadores">
        <option>Selecione</option>
    </select>
</div>

<div class="form-group">
    <label asp-for="DoacoesTiposDoacao"></label>
    <select name="tipoDoacoesSelecionadas" class="form-control" multiple="multiple" asp-items="@ViewBag.TipoDoacoes"></select>
</div>
